{% set description = '' %} 
{% set name = '' %} 
{% set firstName = '' %} 
{% set createdThisMonth = '' %}

{% if selectedSearchDiscussion is not empty %}
    {% set description = selectedSearchDiscussion.sensitiveDataDescription  %} 
    {% set name = selectedSearchDiscussion.sensitiveDataName  %} 
    {% set firstName = selectedSearchDiscussion.sensitiveDataFirstName %} 
    {% set createdThisMonth = selectedSearchDiscussion.createdThisMonth %} 
{% endif %}

<div class="card-header">
    <div class="flex-grow-1">
        <small class="float-end text-navy">
            {% include 'components/choose_saved_search.html.twig' with { 'view': 'discussion', 'searchDiscussion': searchDiscussion, 'description': description } %}
        </small>
        <h5 class="card-title mb-0">
            {{ 'Search Discussion'|trans }}
        </h5><br />
    </div>
    <div class="card-body">
        <div class="row">
            <div class="mb-3 col-6">
                <label for="inputName" class="form-label">{{ 'Name'|trans }}</label>
                <input type="Name" class="form-control" value='{{ name }}' id="inputName" placeholder="{{ 'Name'|trans }}">
            </div>

            <div class="mb-3 col-6">
                <label for="firstName" class="form-label">{{ 'FirstName'|trans }}</label>
                <input type="Name" class="form-control" value='{{ firstName }}' id="inputFirstName" placeholder="{{ 'FirstName'|trans }}">
            </div>

            <div class="mb-3 col-6">
                <div class="form-check form-check-inline form-switch">
                    <input class="form-check-input" type="checkbox" name="createdThisMonth" {{ createdThisMonth == true ? "checked" : "" }}>
                    <label class="form-check-label">{{ 'Created This Month'|trans }}</label>
                </div>
            </div>

            {% include 'components/submit_search_criteria.html.twig' with { 'view': 'discussion' } %}
        </div>
    </div>
</div>




{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
<div class="row">
	<div class="col-md-4 col-xl-12">
		<div class="card mb-3">
			<div id="search_discussion_with_criteria">
			</div>
			<div id="search_message_with_criteria">
			</div>
			<div id="DivNewDiscussion" style="display:none;">
				{% include 'discussion/add_new_discussion.html.twig' with {'formDiscussion': formDiscussion} %}
			</div>
		</div>
	</div>

	<div class="col-md-4 col-xl-4">
		<div class="card mb-3">
			<div class="card-header">
				<div class="flex-grow-1">
					<small class="float-end text-navy">
						<div class="dropdown">
							<button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButtonDiscussionActions" data-bs-toggle="dropdown" aria-expanded="false">
							</button>
							<ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonDiscussionActions">
								<li>
									<a class="dropdown-item" onclick="addNewDiscussion(event)">
										<i class="fa fa-plus-circle" style="color:#3380ff"></i> {{ 'New discussion'|trans }}
									</a>
								</li>
								<li><hr class="dropdown-divider"></li>
								<li>
									<a class="dropdown-item" 
										onclick="searchWithCriteriaClick(event)" 
										data-view="discussion"
									>
										<i class="fa fa-search-plus" style="color:#3380ff"></i> {{ 'Search Discussion'|trans }}
									</a>
								</li>
							</ul>
						</div>
					</small>
					<h5 class="card-title mb-0">
						{{ 'Discussions'|trans }}
					</h5><br />
				</div>

				<div class="card-body text-center">
					<div id="new_discussion"></div>
					<div id="discussion_list">
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col-md-8 col-xl-8">
		<div id="message_list">
		</div>
		<div id="add_form_message">
		</div>
	</div>
</div>

<h1 class="h3 mb-3"></h1>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('discussionMessage') }}
{% endblock %}
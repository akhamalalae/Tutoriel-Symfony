{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
<div class="row">
	<div class="col-md-4 col-xl-12">
		<div class="card mb-3">
			<div id="search_discussion_with_criteria">
			</div>
			<div id="search_message_with_criteria">
			</div>
		</div>
	</div>

	<div class="col-md-4 col-xl-4">
		<div class="card mb-3">
			<div class="card-header">
				<div class="flex-grow-1">
					<small class="float-end text-navy">
						<a data-bs-toggle="modal" 
							data-bs-target="#addDiscussion"
							data-bs-toggle="tooltip" 
							data-bs-placement="top" 
							title="Add new discussion"
						>
							<i class="fa fa-plus-circle" style="font-size:20px;color:#0080FF;"></i>
						</a>
						<a data-bs-toggle="tooltip" 
							data-bs-placement="top" 
							title="Search discussion"
						>
							<i onclick="searchWithCriteriaClick(event)" 
								data-view="discussion"
								class="fa fa-search-plus"
								style="font-size:20px;color:#0080FF;"
							>
							</i>
						</a>
					</small>
					<h5 class="card-title mb-0">
						{{ 'Discussions'|trans }}
					</h5><br />
				</div>

				<div class="card-body text-center">
					<div id="new_discussion"></div>
					<div id="discussion_list">
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col-md-8 col-xl-8">
		<div id="message_list">
		</div>
		<div id="add_form_message">
		</div>
	</div>
</div>

<h1 class="h3 mb-3"></h1>

<!-- Modal -->
{% include 'discussion/modal_add_discussion.html.twig' with {'formDiscussion': formDiscussion} %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('discussionMessage') }}
{% endblock %}
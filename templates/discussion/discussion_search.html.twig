{% set description = '' %} 
{% set name = '' %} 
{% set firstName = '' %} 
{% set createdThisMonth = '' %}
{% set IdSelectedSearchDiscussion = '' %}

{% if selectedSearchDiscussion is not empty %}
    {% set description = selectedSearchDiscussion.sensitiveDataDescription  %} 
    {% set name = selectedSearchDiscussion.sensitiveDataName  %} 
    {% set firstName = selectedSearchDiscussion.sensitiveDataFirstName %} 
    {% set createdThisMonth = selectedSearchDiscussion.createdThisMonth %} 
    {% set IdSelectedSearchDiscussion = selectedSearchDiscussion.id %} 
{% endif %}

<div class="card-header">
    <div class="flex-grow-1">
		<small class="float-end text-navy">
			<div class="card-actions float-end">
				<div class="dropdown position-relative">
					<a href="#" style="color:black;" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false" class="">
						{% include 'components/feather_icons/more-horizontal.html.twig' %}
					</a>
					<div class="dropdown-menu dropdown-menu-end">
                        {% include 'components/search_dropdown_actions.html.twig' with { 'view': 'discussion', 'idSelectedSearch': IdSelectedSearchDiscussion} %}
					</div>
				</div>
			</div>
		</small>

        <div class="container mb-3">
            <div class="row align-items-center">
                <div class="col-auto">
                    <h6 class="mb-0">{{ 'Search Discussion'|trans }}</h6>
                </div>
                <div class="col-auto ms-2">
                    {% include 'components/search_select.html.twig' with { 'view': 'discussion', 'searchDiscussion': searchDiscussion, 'description': description } %}
                </div>
            </div>
        </div>
	</div>
    <div class="card-body">
        <div class="row">
            <!-- Champ Name -->
            <div class="mb-3 col-6">
                <label for="inputName" class="form-label">{{ 'Name'|trans }}</label>
                <div id="tags-name" class="d-flex flex-wrap gap-2 mt-2"></div>
                <input id="tag-input-name" 
                    type="text" 
                    class="form-control form-control-sm mt-2"
                    placeholder="{{ 'Enter a name, then press ; or Enter to add it as a tag'|trans }}">
                <input type="hidden" id="inputName" name="inputName" value="{{ name|e }}">
            </div>

            <!-- Champ FirstName -->
            <div class="mb-3 col-6">
                <label for="inputFirstName" class="form-label">{{ 'FirstName'|trans }}</label>
                <div id="tags-firstname" class="d-flex flex-wrap gap-2 mt-2"></div>
                <input id="tag-input-firstname" 
                    type="text" 
                    class="form-control form-control-sm mt-2"
                    placeholder="{{ 'Enter a first name, then press ; or Enter to add it as a tag'|trans }}">
                <input type="hidden" id="inputFirstName" name="inputFirstName" value="{{ firstName|e }}">
            </div>

            <div class="mb-3 col-6">
                <div class="form-check form-check-inline form-switch">
                    <input class="form-check-input" type="checkbox" name="createdThisMonth" {{ createdThisMonth == true ? "checked" : "" }}>
                    <label class="form-check-label">{{ 'Created This Month'|trans }}</label>
                </div>
            </div>

            <input type="hidden" id="IdSelectedSearchDiscussion" value='{{ IdSelectedSearchDiscussion }}'>

            {% include 'components/search_submit_section.html.twig' with { 'view': 'discussion', 'idSelectedSearch': IdSelectedSearchDiscussion } %}
        </div>
    </div>
</div>




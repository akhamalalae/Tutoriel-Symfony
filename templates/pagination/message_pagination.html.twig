{% if numbrePagesPagination > 1 %}
	<nav aria-label="Page navigation">
		<ul class="pagination justify-content-center">
			<li
				{% if page == 1 %} 
					class="page-item disabled" 
				{% else %}
					class="page-item" 
				{% endif %}
			>
				<p class="page-link" 
					id="pagination_previous" 
					onClick="paginationClick(event)"
					data-idDiscussion="{{ discussion.id }}" 
					data-page="{{ page - 1 }}"
					data-url= {{ path('app_create_message', {idDiscussion: discussion.id, page:  page - 1}) }}
				>
					{{ 'Previous'|trans }}
				</p>
			</li>
			{% for pagination in 1..numbrePagesPagination %}
				<li
					{% if page == pagination %} 
						class="page-item active" 
					{% else %}
						class="page-item" 
					{% endif %}
				>
					<p class="page-link" 
						onClick="paginationClick(event)"
						data-idDiscussion="{{ discussion.id }}" 
						data-page="{{ pagination }}"
						data-url= {{ path('app_create_message', {idDiscussion: discussion.id, page:  pagination}) }}
					>
						{{ pagination }}
					</p>
				</li>
			{% endfor %}
			<li
				{% if page == numbrePagesPagination %} 
					class="page-item disabled" 
				{% else %}
					class="page-item" 
				{% endif %}
			>
				<p class="page-link" 
					id="pagination_next" 
					onClick="paginationClick(event)"
					data-idDiscussion="{{ discussion.id }}" 
					data-page="{{ page + 1 }}"
					data-url= {{ path('app_create_message', {idDiscussion: discussion.id, page:  page + 1}) }}
				>
					{{ 'Next'|trans }}
				</p>
			</li>
		</ul>
	</nav>
{% endif %}
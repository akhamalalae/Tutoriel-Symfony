        <h2>
            {{ "9. Contact" }}
        </h2>
        <p>
            {{ 
                "
                If you have any questions regarding these terms, please contact us at [email@example.com].
                "
            }}
        </p>
	</div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('settings') }}
{% endblock %}
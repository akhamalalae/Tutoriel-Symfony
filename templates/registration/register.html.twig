{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<main class="d-flex w-100">
    <div class="container d-flex flex-column">
        <div class="row vh-100">
            <div class="d-table-cell align-middle">
                <div class="text-center mt-4">
                    <h1>{{ 'Register'|trans }}</h1>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <div class="card mb-3 col-md-7">
                        <div class="card-body">
                            <div class="m-sm-4">
                                {% include 'flash_messages/flash_messages_verify_email_error.html.twig' %}

                                {{ form_errors(registrationForm) }}

                                {{ form_start(registrationForm) }}
                                    {{ form_row(registrationForm.image) }}
                                    {{ form_row(registrationForm.firstName) }}
                                    {{ form_row(registrationForm.name) }}
                                    {{ form_row(registrationForm.email) }}
                                    {{ form_row(registrationForm.dateOfBirth) }}
                                    {{ form_row(registrationForm.plainPassword, {
                                        label: 'Password'
                                    }) }}
                                    {{ form_row(registrationForm.agreeTerms) }}
                                    
                                    <div class="text-center mt-3">
                                        <button type="submit" class="btn btn-lg btn-primary">{{ 'Register'|trans }}</button>
                                    </div>
                                {{ form_end(registrationForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


{% endblock %}

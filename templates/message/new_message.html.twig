{% if message is not empty %}
	<div class="d-flex align-items-start">
		{% if message.creatorUser.brochureFilename %} 
			<img src="{{asset('img/avatars/' ~ message.creatorUser.brochureFilename)}}" width="36" height="36" class="rounded-circle me-2" alt="{{ message.creatorUser.name }}">
		{% else %} 
			<img src="{{asset('img/avatars/avatar.jpg')}}" width="36" height="36" class="rounded-circle me-2" alt="avatar">
		{% endif %}
		<div class="flex-grow-1">
			<small class="float-end text-navy">{{ message.dateCreation|date("F j, Y") }}</small>
			<strong>{{ message.creatorUser.firstName }} {{ message.creatorUser.name }}</strong><br />
			<small class="text-muted">{{ message.dateCreation|date("H:i") }} </small><br />

			<div role="alert"
					{% if message.creatorUser == app.user %} 
						class="alert alert-primary"
					{% else %} 
						class="alert alert-success"
					{% endif %}
			>
				{{ message.message| raw }}

				{% if message.fileMessages is not empty %}
					{% for file in message.fileMessages %}
						<span class="badge rounded-pill bg-warning text-dark">
							<a download href="{{asset('files/message/' ~ file.name)}}">
								{{ file.name }}
							</a>
						</span>
					{% endfor %}
				{% endif %}
			</div>
		</div>
	</div>
{% endif %}
<div class="d-flex align-items-start" id="item-message-block-for-delete-{{item.id}}">
	{% if item.message.creatorUser.sensitiveDataBrochureFilename %} 
		{% set subDirectory = 'img/avatars/'  %} 
		<img 
            src="data:{{ item.message.creatorUser.sensitiveDataMimeType }};base64,{{ item.message.creatorUser.sensitiveDataBrochureFilename|decrypt(subDirectory) }}" 
			width="36" height="36" 
			class="rounded-circle me-2" 
			alt="{{ item.message.creatorUser.sensitiveDataName }}"
		>
	{% else %} 
		<img src="{{asset('img/avatars/avatar.jpg')}}" width="36" height="36" class="rounded-circle me-2" alt="avatar">
	{% endif %}
	
	<div class="flex-grow-1">
		<small class="float-end text-navy">{{ item.message.dateCreation|date("F j, Y") }} </small>
		<strong>
			{{ item.message.creatorUser.sensitiveDataFirstName }} 
			{{ item.message.creatorUser.sensitiveDataName }}
			{% include 'message/block_content_message_actions.html.twig' with {'item': item} %}
		</strong>
		<br />
		<div id="item-message-block-for-answer-{{item.id}}">
			{% if item.answerMessages is not empty %}
				{% for answer in item.answerMessages %}
					{% include 'message/block_content_message.html.twig' with {'item': answer.message, 'alert': 'alert alert-warning'} %}
				{% endfor %}
			{% endif %}

			<small class="text-muted">{{ item.message.dateCreation|date("H:i") }}</small><br />
			
			{% include 'message/block_content_message.html.twig' with {'item': item.message, 'alert': 'alert alert-primary'} %}
		</div>
	</div>
</div>

{% set description = '' %} 
{% set message = '' %} 
{% set fileName = '' %} 
{% set createdThisMonth = '' %}

{% if selectedSearchMessage is not empty %}
    {% set description = selectedSearchMessage.sensitiveDataDescription  %} 
    {% set message = selectedSearchMessage.sensitiveDataMessage  %} 
    {% set fileName = selectedSearchMessage.fileName  %} 
    {% set createdThisMonth = selectedSearchMessage.createdThisMonth %} 
{% endif %}

<div class="card-header">
    <div class="flex-grow-1">
        <small class="float-end text-navy">
            {% include 'components/choose_saved_search.html.twig' with { 'view': 'message', 'searchMessage': searchMessage, 'description': description } %}
        </small>
        <h5 class="card-title mb-0">
            {{ 'Search Message'|trans }}
        </h5><br />
    </div>
    <div class="card-body">
        <div class="row">
            <div class="mb-3 col-6">
                <label for="message" class="form-label">{{ 'Message'|trans }}</label>
                <input type="Message" value='{{ message }}' class="form-control" id="inputMessage" placeholder="{{ 'Message'|trans }}">
            </div>

            <div class="mb-3 col-6">
                <label for="fileName" class="form-label">{{ 'Name file'|trans }}</label>
                <input type="Message" value='{{ fileName }}' class="form-control" id="inputFile" placeholder="{{ 'Name file'|trans }}">
            </div>

            <div class="mb-3 col-6">
                <div class="form-check form-check-inline form-switch">
                    <input class="form-check-input" type="checkbox" name="createdThisMonth" {{ createdThisMonth == true ? "checked" : "" }}>
                    <label class="form-check-label">{{ 'Created This Month'|trans }}</label>
                </div>
            </div>
    
            {% include 'components/submit_search_criteria.html.twig' with { 'view': 'message', 'page': page, 'idDiscussion': idDiscussion } %}
        </div>
    </div>
</div>




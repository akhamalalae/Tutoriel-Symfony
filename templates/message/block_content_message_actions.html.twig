<div class="card-actions float-end">
    <div class="dropdown position-relative">
        <a href="#" style="color:black;" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false" class="">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal align-middle"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
        </a>
        <div class="dropdown-menu dropdown-menu-end">
            <a class="dropdown-item" 
                id="dropdown-item-actions-answer"
                onClick="messageItemActionAnswerClick(event)"
                data-idMessage="{{item.message.id}}"
                data-idDiscussionMessageUser="{{item.id}}"
            >
                {{ 'Answer'|trans }}
            </a>
            <a class="dropdown-item"
                id="dropdown-item-actions-delete"
                onClick="messageItemActionDeleteClick(event)"
                data-idDiscussionMessageUser="{{item.id}}"
            >
                {{ 'Delete'|trans }}
            </a>
        </div>
    </div>
</div>
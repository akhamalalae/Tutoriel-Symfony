<li class="nav-item dropdown">
    <a class="nav-icon dropdown-toggle d-inline-block d-sm-none" href="#" data-bs-toggle="dropdown">
        <i class="align-middle" data-feather="settings"></i>
    </a>

    <a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#" data-bs-toggle="dropdown">
        {% if app.user.sensitiveDataBrochureFilename %} 
            {% set subDirectory = 'img/avatars/'  %} 
            <img
                src="data:{{ app.user.sensitiveDataMimeType }};base64,{{ app.user.sensitiveDataBrochureFilename|decrypt(subDirectory) }}" 
                class="avatar img-fluid rounded me-1" 
                alt="{{ app.user.name }}"
            >
        {% else %} 
            <img src="{{asset('img/avatars/avatar.jpg')}}" class="avatar img-fluid rounded me-1" alt="{{ app.user.sensitiveDataName }}">
        {% endif %}
    </a>
    <div class="dropdown-menu dropdown-menu-end">
        <a class="dropdown-item" href="{{ path('app_update_profil') }}">
            <i class="align-middle me-1" data-feather="user"></i> 
            {{ 'Profile'|trans }}
        </a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="{{ path('privacy_policy') }}">
            <i class="align-middle me-1" data-feather="settings"></i> 
            {{ 'Privacy'|trans }}
        </a>
        <a class="dropdown-item" href="{{ path('help_center') }}">
            <i class="align-middle me-1" data-feather="help-circle"></i> 
            {{ 'Help Center'|trans }}
        </a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="{{  path('app_logout') }}">
            {{ 'Log out'|trans }}
        </a>
    </div>
